datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime      @default(now())
  favorites Url[]
  firstName String?
  id        String        @id @default(cuid())
  lastName  String?
  password  String
  role      EnumUserRole?
  roles     Json
  updatedAt DateTime      @updatedAt
  username  String        @unique
}

model Url {
  address      String        @unique
  createdAt    DateTime      @default(now())
  description  String?
  favico       String?
  hits         Float?
  id           String        @id @default(cuid())
  name         String
  owner        String?
  shortAddress String
  tags         EnumUrlTags[]
  thumbnail    String?
  title        Json?
  updatedAt    DateTime      @updatedAt
  urlGroups    UrlGroup[]
  users        User[]
}

model UrlGroup {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  topic      String?
  topicItems Url[]
  updatedAt  DateTime @updatedAt
}

enum EnumUserRole {
  Admin
  Contributor
  User
}

enum EnumUrlTags {
  Asdasasd
}